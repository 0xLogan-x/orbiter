<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Orbiter rules"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="HtmlHelp"
			DisplayName="HtmlHelp"
			CommandLine="hhc.bat $(InputDir)$(InputFileName)"
			Outputs="*.chm"
			FileExtensions="*.hhp"
			>
			<Properties>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="OdtToPdf"
			DisplayName="OdtToPdf"
			CommandLine="&quot;c:\program files\libreoffice 5\program\soffice.exe&quot; --headless --convert-to pdf [inputs] --outdir $(OutDir)"
			Outputs="$(OutDir)\$(InputName).pdf"
			FileExtensions="*.odt"
			ExecutionDescription="Convert ODT to PDF file"
			>
			<Properties>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="DocToPdf"
			DisplayName="DocToPdf"
			CommandLine="&quot;c:\program files\libreoffice 5\program\soffice.exe&quot; --headless --convert-to pdf [inputs] --outdir $(OutDir)"
			Outputs="$(OutDir)\$(InputName).pdf"
			FileExtensions="*.doc"
			ExecutionDescription="Convert DOC to PDF file"
			>
			<Properties>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
